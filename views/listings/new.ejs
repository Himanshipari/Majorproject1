 <% layout("/layouts/boilerplate") %>
 <div class="row mt-3"><!--form bohot bada h toh ek hi page me lane ke liye row use kr rhe h -->
    <div class="col-8 offset-2"><!--ye hamra col div banega means 7-8  pats me divide krega -->
    <br><br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation">
           <div  class="mb-3">
        <lable for="title"class="form-label">Title</lable>
           <div  class="mb-3">
        <input 
         name="listing[title]" 
        placeholder="Add a catchy title" 
        type="text"
        class="form-control"
        required
        />    <!--listing object and key is title-->
   <div class="valid-feedback">Title looks good!</div>
      </div>

      <div  class="mb-3">
        <lable for="description"class="form-label" >Description</lable>
        <textarea 
        name="listing[description]" 
        class="form-control"
        required></textarea>
         <div class="invalid-feedback">plz enter a short description</div>
        </div>

         <div class="mb-3">
              <lable for="image"class="form-label" class="form-label">Image Link</lable> 
              <input name="listing[image][url]"
               placeholder="enter image URL/Link" 
               type="text" 
               class="form-control"/>
         </div>

         <div class="row">
        <div class="mb-3 col-md-4"><!--screen choti krne pr country &price ek line pe aa jaye useke liye md use krenge -->
                                   <!--lg and sm me same hi rhega ek hi line me -->
        <lable for="price"class="form-label" class="form-label">Price</lable> 
        <input name="listing[price]" 
        placeholder="1200"
         type="number"                         
         class="form-control" 
         required/><!--type:number remove kiya h photo me isliye vo string le rhe h-->
        <div class="invalid-feedback">enter valid price</div>
      </div>

        
        <div class="mb-3 col-md-8">
         <lable for="country"class="form-label" class="form-label">country</lable> 
         <input 
         name="listing[country]"
          placeholder="India" 
          type="text" 
          class="form-control"
          required
          />
        <div class="invalid-feedback">plz enter valid country</div>
      </div>
        </div>

        <div class="mb-3">
     <lable for="location"class="form-label" class="form-label">Location</lable> 
       <input
        name="listing[location]" 
       placeholder="Jaipur,Rajasthan"
        type="text"
         class="form-control"
         required/>
       <div class="invalid-feedback">enter valid location</div>
      </div>
       </div>

     
        <button class="btn btn-dark add-btn mt-3">Add</button>
     
    </form>
    </div>
    </div>