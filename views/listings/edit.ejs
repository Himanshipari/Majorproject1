 <% layout("/layouts/boilerplate") %>
 <div class="row mt-3">
    <div class="col-8 offset-2"><!--offset right me shift krta h -->
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
         <div  class="mb-3">
             <lables for="title"class="form-label">Title</lable>
             <input name="listing[title]"
              value="<%=listing.title%>" 
              type="text" 
              class="form-control"/><!--listing object and key is title-->
         </div>
     
       <div>
          <lables for="description"class="form-label">Description</lable>
        <textarea name="listing[description]"
         class="form-control"><%=listing.description%></textarea>
        </div>
       
         <div  class="mb-3">
             <lables for="image"class="form-label">Image</lable>
            <input name="listing[image][url]" 
            value="<%=listing.image.url%>" 
             type="text"  
             class="form-control"/>
         </div>
        <div class="row">
         <div  class="mb-3 col-md-4">
            <lables for="price"class="form-label">Price</lable>
            <input name="listing[price]" 
            value="<%=listing.price%>" 
            type="number" 
             class="form-control"/>
         </div>
       
     <div  class="mb-3 col-md-8">
            <lables for="country"class="form-label">Country</lable>
       <input name="listing[country]"
        value="<%=listing.country%>" 
        type="text"  
        class="form-control"/>
     </div>
        </div>
           <div  class="mb-3">
             <lables for="location"class="form-label">Location</lable>
            <input name="listing[location]" 
            value="<%=listing.location%>"
             type="text" 
              class="form-control"/>
           </div>
       
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
    </div>
    </div>